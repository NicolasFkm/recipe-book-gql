{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2018",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@entities/*": [
        "src/domain/entities/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@graphql/*": [
        "src/app/graphql/*"
      ],
      "@enums/*": [
        "src/domain/enums/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@repositories/*": [
        "src/domain/repositories/*"
      ],
      "@resolvers/*": [
        "src/resolvers/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}